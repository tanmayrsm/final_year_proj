<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark2"
    android:orientation="vertical"
    tools:context=".AllNotifications">

    <include layout="@layout/simple_bar2"/>

    <TextView
        android:id="@+id/username_in_allnotifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary2"
        android:padding="10dp"
        android:text="username"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="18sp"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView44"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/username_in_allnotifications"
        android:layout_marginBottom="100dp"
        android:background="@color/colorPrimaryDark2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark2"
        android:id="@+id/no_contacts"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:text="No Notifications"
        android:visibility="gone"/>



</LinearLayout>