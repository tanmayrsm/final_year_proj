<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Cardvu"
    android:layout_marginBottom="1dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp"
    app:contentPadding="4dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LLo"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="78dp"
            android:layout_height="55dp"
            android:layout_marginTop="13dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/userProfileImage"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User name"
                android:id="@+id/itemName2"
                android:padding="9dp"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/connectButton"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:text="Connect"
                android:textAllCaps="false"
                android:background="@drawable/button_connect"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fiber_manual_record_black_24dp"
            android:id="@+id/online"
            android:visibility="invisible"/>

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_view_message_24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="100dp"
            android:id="@+id/see_profile"
            android:background="@drawable/roundcorners"
            />


    </LinearLayout>

</androidx.cardview.widget.CardView>