<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_launcher_background"
        android:id="@+id/profile_img"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/receiver_msgs"
        android:text="uska message"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/profile_img"
        android:background="@drawable/other_user"
        android:padding="10dp"
        android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="12:30 pm"
        android:textAlignment="textStart"
        android:layout_below="@+id/receiver_msgs"
        android:layout_toEndOf="@+id/profile_img"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="13sp"
        android:padding="10dp"
        android:id="@+id/time_received_receiver"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sender_msgs"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="@+id/receiver_msgs"
        android:background="@drawable/me_user"
        android:text="sender messages"
        android:textSize="14sp"
        android:padding="10dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="1:30 pm"
        android:textAlignment="textStart"
        android:layout_below="@+id/receiver_msgs"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="13sp"
        android:padding="10dp"
        android:id="@+id/time_sender"
        />

</RelativeLayout>