<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/username_in_allsent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary2"
        android:padding="10dp"
        android:text="username"
        android:textAlignment="center" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/username_in_allsent"
        android:layout_marginBottom="100dp"
        android:background="@color/colorPrimaryDark2" />

    <LinearLayout
        android:id="@+id/stream_buttons"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/recyclerview2"
        android:layout_alignBottom="@+id/recyclerView2"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="-106dp"
        android:background="@color/colorPrimaryDark2"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/mycontacts"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#F8218411"
            android:text="My contacts"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/allusers"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#218411"
            android:text="All users"
            android:textColor="#FFFFFF"

            />

        <Button
            android:id="@+id/sent"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#218411"
            android:text="sent request"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/received"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#218411"
            android:text=" received request"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</RelativeLayout>