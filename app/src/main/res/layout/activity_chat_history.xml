<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#142439"    android:orientation="vertical"    android:padding="15dp"    tools:context=".chat_history">    <TextView        android:id="@+id/uska_naam"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="Name "        android:textAlignment="center"        android:textColor="#FDFCFC"        android:textSize="20sp"        android:textStyle="bold" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal"        android:id="@+id/send_docas">    <Button        android:layout_width="68dp"        android:layout_height="29dp"        android:text="ur loc"        android:background="#03A9FD"        android:textAllCaps="false"        android:textColor="#FFFFFF"        android:id="@+id/location"/>    <Button        android:id="@+id/send_doc"        android:layout_width="120dp"        android:layout_height="wrap_content"        android:layout_marginLeft="35dp"        android:text="Send Doc"        android:textAllCaps="false" />        <ImageView            android:layout_width="30dp"            android:layout_height="40dp"            android:src="@drawable/ic_delete_black_24dp"            android:id="@+id/del_chats"            />    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal">        <Switch            android:id="@+id/switch2"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginTop="1dp"            android:checked="false"            android:switchMinWidth="56dp"            android:text="Switch Language  "            android:textColor="#FFFFFF"            android:textOff="OFF"            android:textOn="ON" />        <Button            android:id="@+id/view_doc"            android:layout_width="68dp"            android:layout_height="29dp"            android:layout_marginLeft="5dp"            android:background="#03A9FD"            android:text="View"            android:textAllCaps="false"            android:textColor="#FFFFFF" />        <Button            android:id="@+id/real_time_ocr"            android:layout_width="51dp"            android:layout_height="29dp"            android:layout_marginLeft="5dp"            android:background="#03A9FD"            android:text="Ocr"            android:textAllCaps="false"            android:textColor="#FFFFFF" />        <Button            android:id="@+id/lang_ocr"            android:layout_width="60dp"            android:layout_height="28dp"            android:layout_marginLeft="5dp"            android:background="#03A9FD"            android:text="Lang_Ocr"            android:textAllCaps="false"            android:textColor="#FFFFFF" />    </LinearLayout>    <androidx.recyclerview.widget.RecyclerView        android:id="@+id/recyclerview2"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_marginTop="5dp">    </androidx.recyclerview.widget.RecyclerView>    <androidx.recyclerview.widget.RecyclerView        android:id="@+id/native_recyclerview"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_marginTop="5dp"        android:visibility="gone">    </androidx.recyclerview.widget.RecyclerView></LinearLayout>